@page
@model ProductMove_App.Pages.LoaiSanPhamManager.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Thông tin chi tiết</h1>


<div>
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="LoaiSanPham.IdLoaiSanPham" />
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label" asp-for="LoaiSanPham.TenLoaiSanPham"></label>
            <div class="col-sm-6">
                <input asp-for="LoaiSanPham.TenLoaiSanPham" readonly class="form-control" />
            </div>
        </div>
        <div class="row mb-3">
            <a style="margin-left: 10px;" class="btn btn-primary" asp-page="./Edit">Chỉnh sửa</a>
            <a style="margin-left: 10px;" class="btn btn-secondary" asp-page="Index">Trở về</a>
        </div>
    </form>
</div>

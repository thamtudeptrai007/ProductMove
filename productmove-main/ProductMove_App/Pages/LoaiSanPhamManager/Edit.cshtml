@page
@model ProductMove_App.Pages.LoaiSanPhamManager.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Chỉnh sửa</h1>

<h4>Thông tin chi tiết loại sản phẩm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LoaiSanPham.IdLoaiSanPham" />
            <div class="form-group">
                <label asp-for="LoaiSanPham.TenLoaiSanPham" class="control-label"></label>
                <input asp-for="LoaiSanPham.TenLoaiSanPham" class="form-control" />
                <span asp-validation-for="LoaiSanPham.TenLoaiSanPham" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Xác nhận" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Trở về</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

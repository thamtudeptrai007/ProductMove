@page
@model ProductMove_App.Pages.LoaiSanPhamManager.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Xóa loại sản phẩm</h1>

<h3>Bạn có chắc chắc muốn xóa loại sản phẩm?</h3>
<div>
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="LoaiSanPham.IdLoaiSanPham" />
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label" asp-for="LoaiSanPham.TenLoaiSanPham"></label>
            <div class="col-sm-6">
                <input asp-for="LoaiSanPham.TenLoaiSanPham" readonly class="form-control" />
            </div>
            <div class="row mb-3">
                <input type="submit" value="Xác nhận" class="btn btn-danger" />
                <a style="margin-left: 10px;" class="btn btn-secondary" asp-page="Index">Trở về</a>
            </div>
        </div>
    </form>
</div>
